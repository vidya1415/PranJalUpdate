<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="10dp"
    app:cardElevation="15dp"
    tools:showIn=".product_details">

    <RelativeLayout
        android:id="@+id/cart_rel1"
        android:layout_width="match_parent"
        android:layout_height="156dp"
        android:background="@color/colorAccent">

        <TextView
            android:id="@+id/cart_dealer_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="Dealer name"
            android:textColor="@color/whiteTextColor"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cart_prod_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cart_dealer_name"
            android:layout_marginLeft="5dp"
            android:text="product name"
            android:textColor="@color/whiteTextColor"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cart_prod_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cart_dealer_name"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="end"
            android:text="product type"
            android:textAlignment="viewEnd"
            android:textColor="@color/whiteTextColor"
            android:textSize="20dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/prod_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cart_prod_name"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="-6dp"
            android:layout_marginRight="-6dp"
            android:gravity="center"
            android:text="product price"
            android:textColor="@color/whiteTextColor"
            android:textSize="20dp"
            android:textStyle="bold" />

        <!--        <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton-->
        <!--            android:id="@+id/counter"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_below="@+id/prod_price"-->
        <!--            android:layout_centerHorizontal="true"-->
        <!--            android:layout_marginTop="10dp"-->
        <!--            android:elevation="6dp"-->
        <!--            app:finalNumber="10"-->
        <!--            app:initialNumber="1"-->
        <!--            app:textSize="16dp">-->

        <!--        </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>-->
        <NumberPicker
            android:id="@+id/addthenumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/prod_price"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:elevation="6dp"
            android:textColor="#ffff"
            android:textSize="16dp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/addtocart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="19dp"
            android:layout_marginRight="19dp"
            android:layout_marginBottom="16dp"
            android:background="@color/colorPrimaryDark"
            android:elevation="6dp"
            android:src="@drawable/ic_baseline_shopping_cart_24" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>